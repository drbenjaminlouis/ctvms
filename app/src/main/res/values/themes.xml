<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CTVMS" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>
    <style name="Theme.CTVMS" parent="Base.Theme.CTVMS" />
    <style name="UserDialog" parent="Theme.Material3.Dark.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/black</item>
        <item name="materialButtonStyle">@color/black</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="NewDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MyCustomIndicatorStyle" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/grey</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
    </style>
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="spinnerStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>

    </style>
</resources>